package SaborPizza;

import javax.swing.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class PrecoSabor extends JFrame {
    private JTextField campoSimples;
    private JTextField campoEspecial;
    private JTextField campoPremium;

    public PrecoSabor() {
        setTitle("Atualizar Preço dos Sabores");
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(400, 300);
        setLayout(null);

        JLabel labelSimples = new JLabel("Preço Simples (R$ por cm²):");
        labelSimples.setBounds(30, 30, 200, 25);
        add(labelSimples);

        campoSimples = new JTextField();
        campoSimples.setBounds(250, 30, 100, 25);
        add(campoSimples);

        JLabel labelEspecial = new JLabel("Preço Especial (R$ por cm²):");
        labelEspecial.setBounds(30, 80, 200, 25);
        add(labelEspecial);

        campoEspecial = new JTextField();
        campoEspecial.setBounds(250, 80, 100, 25);
        add(campoEspecial);

        JLabel labelPremium = new JLabel("Preço Premium (R$ por cm²):");
        labelPremium.setBounds(30, 130, 200, 25);
        add(labelPremium);

        campoPremium = new JTextField();
        campoPremium.setBounds(250, 130, 100, 25);
        add(campoPremium);

        JButton botaoSalvar = new JButton("Salvar");
        botaoSalvar.setBounds(150, 200, 100, 30);
        add(botaoSalvar);

        botaoSalvar.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                double precoSimples = Double.parseDouble(campoSimples.getText());
                double precoEspecial = Double.parseDouble(campoEspecial.getText());
                double precoPremium = Double.parseDouble(campoPremium.getText());

                // Atualizar os valores no sistema (em produção, esses valores seriam armazenados em banco ou arquivo)
                System.out.println("Preço Simples atualizado para: R$ " + precoSimples);
                System.out.println("Preço Especial atualizado para: R$ " + precoEspecial);
                System.out.println("Preço Premium atualizado para: R$ " + precoPremium);

                JOptionPane.showMessageDialog(null, "Preços atualizados com sucesso!");
            }
        });

        setVisible(true);
    }

    public static void main(String[] args) {
        new PrecoSabor();
    }
}
